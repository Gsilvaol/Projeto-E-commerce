generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String
  marca       String
  modelo      String
  imagem      String
  nota        Float
  videoReview String
  tags        String[]

  precoBase        Float
  precoPromocional Float
  menorPreco       Float
  maiorPreco       Float
  precoMedio       Float

  especificacoes Json

  @@map("produtos")
}

model Usuario {
  id         Int       @id @default(autoincrement())
  nome       String
  email      String    @unique
  senha      String
  cpf        String?   @unique
  enderecoId Int?      @unique
  endereco   Endereco? @relation(fields: [enderecoId], references: [id])
}

model Endereco {
  id          Int    @id @default(autoincrement())
  logradouro  String
  numero      Int
  complemento String
  bairro      String
  cidade      String
  estado      String

  usuario Usuario?
}
